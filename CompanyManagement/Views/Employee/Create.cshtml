@model CompanyManagement.Application.Employee.EmployeeDto


<a href="@Url.Action("Index")" class="btn btn-link mb-1">
	<i class="bi bi-arrow-left-short align-middle fs-2"></i>
</a>
<h2 class="fw-bold">Add a new Employee</h2>
<div class="col p-4 rounded mt-4 border shadow-sm">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-group mb-2">
			@Html.LabelFor(model => model.FirstName)
			@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
		</div>

		<div class="form-group mb-2">
			@Html.LabelFor(model => model.LastName)
			@Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
		</div>

		<div class="form-group mb-2">
			@Html.LabelFor(model => model.Email)
			@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
		</div>

			<div class="form-group mb-2">
			@Html.DisplayFor(model => model.CreatedDate, new { @class = "form-control" })
			</div>
		<div class="form-group mb-2">
			@Html.LabelFor(model => model.DepartmentId)
			@Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.Departments, "Id", "Name"), "-- Select Department --", new { @class = "form-control" })

		</div>
		<div class="form-group mt-4 text-end">
			<input type="submit" value="Create" class="btn btn-primary" />
		</div>
	}
</div>

