@model IEnumerable<CompanyManagement.Application.Employee.EmployeeDto>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex rounded-3 mb-4 align-items-center justify-content-center text-white" style="min-height: fit-content; height: 12rem; background: linear-gradient(to bottom right, #87bfff, #2667ff);">
    <h1>Employees</h1>
</div>

<div class="d-flex justify-content-center">
    <p>
        <a asp-action="Create" class="btn btn-outline-primary" style="font-weight:500;">Add New Employee</a>
    </p>
</div>

@if (!Model.Any())
{
<p>There are no employees to show.</p>
}
else
{
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Created Date</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.CreatedDate</td>
                    <td>@employee.DepartmentId</td>
                </tr>
            }

        </tbody>
    </table>
</div>
}