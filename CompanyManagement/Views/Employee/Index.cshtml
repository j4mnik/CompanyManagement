@model IEnumerable<CompanyManagement.Application.Employee.EmployeeDto>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex rounded-3 mb-4 align-items-center justify-content-center text-white" style="min-height: fit-content; height: 12rem; background-color: rgba(116, 136, 144, 1);
background-image: linear-gradient(90deg, rgba(116, 136, 144, 1) 0%, rgba(111, 166, 255, 1) 100%);">
    <h1>Employees</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-outline-dark">Create New</a>
</p>

@if (!Model.Any())
{
<p>There are no employees to show.</p>
}
else
{
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Created Date</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.CreatedDate</td>
                    <td>@employee.DepartmentId</td>
                </tr>
            }

        </tbody>
    </table>
</div>
}