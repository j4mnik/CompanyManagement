@model IEnumerable<CompanyManagement.Application.Department.DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>


<div class="row">
@foreach (var item in Model)
{
    <div class="card m-3" style="width:18rem;">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Description</p>
            <a class="btn btn-primary" asp-controller="Department" asp-action="Details" asp-route-Id="@item.Id">Details</a>
            <a href="#" class="btn btn-outline-secondary">Edit</a>
        </div>
    </div>
}
</div>
