@model IEnumerable<CompanyManagement.Application.Department.DepartmentDto>

@{
	ViewData["Title"] = "Departments";
}

<div class="d-flex flex-column rounded-3 mb-4 align-items-center justify-content-center text-white" style="min-height: fit-content; height: 12rem; background-image: linear-gradient( 109.6deg,  rgba(39,142,255,1) 11.2%, rgba(98,113,255,0.78) 100.2% );">
	<h1 class="fw-">Departments</h1>
</div>

<div class="d-flex justify-content-center">
    <p>
        <a asp-action="Create" class="btn btn-outline-primary" style="font-weight:500;">+ Add Department</a>
    </p>
</div>


<h4 class="mt-4 mb-2" style="font-weight:600">All departments</h4>
<div class="row m-2">
	@foreach (var item in Model)
	{
        <div class="border border-2 rounded bg-opacity-10 my-2 py-2" style="cursor: pointer;" onclick="location.href='@Url.Action("Details", "Department", new { Id = @item.Id })'" onmouseover="this.classList.add('bg-primary', 'border-primary')" onmouseout="this.classList.remove('bg-primary', 'border-primary')">
            <div class="row">
                <div class="col-sm">
                    <p style="font-weight:600; margin-bottom: 0;">@item.Name</p>
                </div>
                <div class="col-sm">
                    <p class="opacity-75" style="font-weight:500; margin-bottom: 0;">@item.Description</p>
                </div>
                <div class="col-sm justify-content-end text-end">
                    <a class="btn btn-primary btn-sm" asp-controller="Department" asp-action="Edit" asp-route-Id="@item.Id"><i class="bi bi-pencil-fill align-middle"></i> Edit</a>
                </div>
            </div>
        </div>
	}
</div>

